<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bs.mapper.IntroductionMapper">
	<insert id="addIntroduce"
		parameterType="com.bs.entity.Introduction">
		insert
		introduction(userId,company_name,name,position,email,telphone,address)
		value
		(#{userId},#{companyName},#{name},#{position},#{email},#{telphone},#{address})
	</insert>

	<update id="updateIntroduce" parameterType="com.bs.entity.Introduction">
		UPDATE INTRODUCTION
		<trim prefix="set" suffixOverrides=",">
			<if test="userId!=null">user_id=#{userId},</if>
			<if test="companyName!=null">company_name=#{companyName},</if>
			<if test="name!=null">name=#{name},</if>
			<if test="position!=null">position=#{position},</if>
			<if test="email!=null">email=#{email},</if>
			<if test="telphone!=null">telphone=#{telphone},</if>
			<if test="address!=null">address=#{address},</if>
			<if test="people!=null">people=#{people},</if>
			<if test="icon!=null">icon=#{icon},</if>
		</trim>
		WHERE id=#{id}
	</update>
</mapper>